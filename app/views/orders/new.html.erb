<%= link_to root_path do %>
  <i class="fa fa-solid fa-arrow-left"></i>
  Back
<% end %>
<h3><strong>New Order<strong></h3>
<%= form_with(model: @order, local: true) do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <%= form.fields_for :stops do |stop_form| %>
    <div class="ms-display-flex">

      <div class="field">
        <%= stop_form.label :address %>
        <%= stop_form.text_field :address, class: 'form-control', placeholder: 'Address' %>
      </div>
      <div class="field">
        <%= stop_form.label :stop_type %>
        <%= stop_form.select :kind, [['Load', 'load'], ['Unload', 'unload']], {}, { prompt: 'Type of stop' } %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit class:"ms-btn ms-primary mt-4" %>
  </div>
<% end %>
